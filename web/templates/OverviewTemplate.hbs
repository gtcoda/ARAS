<!---
Шаблоны для страницы #overwiew
-->


<!--- Список цехов -->
<script id="overviewTemplate" type="text/template">
    <div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="owerMachineTableChecked" {{MTChecked }}>
            <label class="form-check-label" for="owerMachineTableChecked">Табличный вид</label>
        </div>

        <div>   
            <ul class="nav nav-tabs">
                {{#each this}}
                <li class="nav-item">
                    <a class="nav-link" data-role="nav-overview-gild-{{gild_id}}" href="#Overview/{{gild_id}}">Цех №{{gild_number}}</a>
                </li>
                 {{/each}}
            </ul>

        </div>
        <div class="flex-container" id="owerviewMachineTable">
            
        </div>
    </div>
</script>


<!--- Отображение цеха в виде таблицы -->
<script id="overviewTableTemplate" type="text/template">
    
    <div class="flex-container">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Номер</th>
                    <th scope="col">Описание</th>
                </tr>
            </thead>
            <tbody>
                {{#each this}}
                    <tr>
                        <td scope="row" colspan = "2" style="background: silver; text-align:center;">{{@key}}</td>
                    </tr>
                    {{#each this}}

                        <tr style="transform: rotate(0);">
                            <td scope="row"><a href="#Events/{{this.machine_id}}" class="stretched-link">{{this.machine_number}}</a></td>
                            <td>{{this.machine_desc}}</td>
                        </tr>
                    {{/each}}
                    
                {{/each}}  
            </tbody>
        </table>
    </div>
    
</script>
